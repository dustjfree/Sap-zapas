<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendHist" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/sendHistToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/darker_color"
        theme="@style/ThemeOverlay.AppCompat.ActionBar"/>
    <EditText
        android:id="@+id/sendedHist"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sendHistToolbar"
        android:layout_above="@+id/btnSend"
        android:ems="10"
        android:drawableBottom="@drawable/edit_text_line"
        android:background="#00000000"
        android:gravity="top"

        android:hint="Пишем здесь..."
    />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:text="Отправить"
        android:textColor="#FFFFFF"
        style="@style/reg_button_new"/>

</RelativeLayout>
